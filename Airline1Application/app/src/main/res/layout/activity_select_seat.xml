<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_seat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ishang.asterisk.airline1application.SelectSeatActivity">

    <TextView
        android:text="Flight Number:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView16"
        android:layout_alignStart="@+id/textView16" />

    <TextView
        android:text="Aircraft:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView21"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView14"
        android:layout_alignStart="@+id/textView14" />

    <TextView
        android:text="Cabin Type:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView22"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView21"
        android:layout_alignStart="@+id/textView21" />

    <TextView
        android:text="tv_deptime_seat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView16"
        android:layout_toEndOf="@+id/textView16"
        android:layout_marginStart="20dp"
        android:id="@+id/tv_deptime_seat" />

    <TextView
        android:text="tv_fltnum_seat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView14"
        android:layout_toEndOf="@+id/textView14"
        android:layout_marginStart="20dp"
        android:id="@+id/tv_fltnum_seat" />

    <TextView
        android:text="tv_aircraft_seat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_aircraft_seat"
        android:layout_alignBaseline="@+id/textView21"
        android:layout_toEndOf="@+id/textView21"
        android:layout_marginStart="20dp" />

    <TextView
        android:text="tv_cabin_seat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_cabin_seat"
        android:layout_alignBaseline="@+id/textView22"
        android:layout_toEndOf="@+id/textView22"
        android:layout_marginStart="20dp" />

    <TextView
        android:text="Select Seats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Departure Time:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_marginStart="21dp"
        android:layout_below="@+id/textView13"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Back"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_back_seat"
        android:layout_above="@+id/btn_submit"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Submit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_submit"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_back_seat" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imgledend"
        android:layout_above="@+id/btn_back_seat"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/chair_occupied"
            android:id="@+id/imageView2"
            android:layout_above="@+id/textView25"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/chair_yourchosen"
            android:id="@+id/imageView3"
            android:layout_alignTop="@+id/imageView2"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="38dp" />

        <TextView
            android:text="Occupied Seats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView28"
            android:textAlignment="center"
            android:textSize="12sp"
            android:layout_alignBaseline="@+id/textView25"
            android:layout_alignBottom="@+id/textView25"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Your chosen Seats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView29"
            android:textAlignment="center"
            android:textSize="12sp"
            android:layout_alignBaseline="@+id/textView28"
            android:layout_alignBottom="@+id/textView28"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="Available Seats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView25"
            android:textAlignment="center"
            android:textSize="12sp"
            android:layout_marginStart="22dp"
            android:layout_below="@+id/imageView"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/chair_available"
            android:id="@+id/imageView"
            android:layout_marginStart="26dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView25" />

    </RelativeLayout>

    <GridLayout
        android:id="@+id/gridseat"
        android:layout_width="match_parent"
        android:rowCount="4"
        android:columnCount="7"
        android:layout_height="150dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true">
        <!-- line 1 -->
        <TextView
            android:text=""
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"/>
        <TextView
            android:text="A"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:gravity="center"/>
        <TextView
            android:text="C"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:gravity="center"/>
        <TextView
            android:text=""
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:gravity="center"/>
        <TextView
            android:text="J"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:gravity="center"/>
        <TextView
            android:text="L"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:gravity="center"/>
        <TextView
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:gravity="center"/>

        <!-- line 2 -->
        <TextView
            android:text="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/s1A"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_height="40dp"
            app:srcCompat="@drawable/chair_available"
            android:layout_width="40dp" />

        <ImageView
            android:id="@+id/s1C"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_height="40dp"
            app:srcCompat="@drawable/chair_available"
            android:layout_width="40dp" />

        <TextView
            android:text=""
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/s1J"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_height="40dp"
            app:srcCompat="@drawable/chair_available"
            android:layout_width="40dp" />

        <ImageView
            android:id="@+id/s1L"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_height="40dp"
            app:srcCompat="@drawable/chair_available"
            android:layout_width="40dp" />

        <TextView
            android:text="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:gravity="center"/>

        <!-- line 3 -->
        <TextView
            android:text="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/s2A"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_height="40dp"
            app:srcCompat="@drawable/chair_available"
            android:layout_width="40dp" />

        <ImageView
            android:id="@+id/s2C"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_height="40dp"
            app:srcCompat="@drawable/chair_available"
            android:layout_width="40dp" />

        <TextView
            android:text=""
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/s2J"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_height="40dp"
            app:srcCompat="@drawable/chair_available"
            android:layout_width="40dp" />

        <ImageView
            android:id="@+id/s2L"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_height="40dp"
            app:srcCompat="@drawable/chair_available"
            android:layout_width="40dp" />

        <TextView
            android:text="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:gravity="center"/>

        <!-- line 4 -->
        <TextView
            android:text="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:id="@+id/r3c0"></TextView>

        <ImageView
            android:id="@+id/s3A"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_height="40dp"
            app:srcCompat="@drawable/chair_available"
            android:layout_width="40dp" />

        <ImageView
            android:id="@+id/s3C"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_height="40dp"
            app:srcCompat="@drawable/chair_available"
            android:layout_width="40dp" />

        <TextView
            android:text=""
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/s3J"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_height="40dp"
            app:srcCompat="@drawable/chair_available"
            android:layout_width="40dp" />

        <ImageView
            android:id="@+id/s3L"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_height="40dp"
            app:srcCompat="@drawable/chair_available"
            android:layout_width="40dp" />

        <TextView
            android:text="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:id="@+id/r3c7" />

    </GridLayout>


</RelativeLayout>
