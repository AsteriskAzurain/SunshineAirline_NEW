<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ishang.asterisk.airline1application.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:id="@+id/textView4"/>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_sponsor"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Search Flights"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vv_main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:id="@+id/btn_search"
        android:onClick="onClick"/>

    <Button
        android:text="My Mileage points"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_mile"
        android:layout_below="@+id/btn_search"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"/>

    <Button
        android:text="Logout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_logout"
        android:layout_below="@+id/btn_mile"
        android:layout_alignStart="@+id/btn_mile"
        android:onClick="onClick"/>

    <VideoView
        android:layout_width="match_parent"
        android:id="@+id/vv_main"
        android:layout_height="175dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />
</RelativeLayout>
